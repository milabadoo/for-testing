@model Library.Domain.Entity.Details

@{
    ViewBag.Title = "Library: форма заказа";
}
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}


<h2>Оформить заказ сейчас</h2>
<p>Пожалуйста заполните все поля, заказ будет сформирован в течении 2 рабочих дней!</p>


@using (Html.BeginForm())
{
    @Html.ValidationSummary();
    <h3>Данные</h3>
    <div class="form-group">
        <label>Ваше имя:</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <label>Билет:</label>
        @Html.TextBoxFor(x => x.Number, new { @class = "form-control" })
    </div>

    <h3>Удобное время получения</h3>
    
    <div class="form-group">
        <label>Дата:</label>
        @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Время:</label>
        @Html.TextBoxFor(x => x.Time, new { @class = "form-control" })
    </div>

    
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Обработать заказ" />
    </div>



}